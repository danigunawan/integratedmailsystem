<% concat ("<div class='alert alert-success alert-dismissable' id='notice'>" + notice + "</div>").html_safe if !notice.nil? %>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Listing users</h2>
        <ol class="breadcrumb">
            <li>
                <%= link_to 'Home', root_path %>
            </li>
            <li>
                <strong>users</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
        
    </div>
</div>

<div class="ibox float-e-margins">
    <div class="ibox-title">
        <h5>users</h5>
        <div class="ibox-tools">

            <%= link_to new_user_path do %>
              <span class="fa fa-plus"></span>
              Tambah User
            <% end %>

        </div>
    </div>
    <div class="ibox-content" style="display: block;">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>ID</th>
                <th>Username</th>
            
                <th>Email</th>
            
                <th>Role</th>
            
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>

            <tbody>
              <%= content_tag_for(:tr, @users) do |user| %>
                <td><%= user.id %></td>
                <td><%= user.username %></td>
            
                <td><%= user.email %></td>

                <td><%= user.role %></td>
            
                <td><%= link_to '<i class="fa fa-eye"></i>'.html_safe, user %></td>
                <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_user_path(user) %></td>
                <td><%= link_to '<i class="fa fa-trash"></i>'.html_safe, user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
</div>

<br>
