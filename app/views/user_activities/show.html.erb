<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>user_activity Detail</h2>
        <ol class="breadcrumb">
            <li>
                <%= link_to 'Home', root_path %>
            </li>
            <li>
                <%= link_to 'user_activities', '/user_activities' %>
            </li>
            <li>
                <strong>Detail</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
        
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
          <h5>Informasi Detail</h5>
          <div class="ibox-tools">
              <%= link_to edit_user_activity_path(@user_activity) do %>
                <span class="fa fa-edit"></span>
                Edit
              <% end %>
          </div>
      </div>
      <div class="ibox-content" style="display: block;">
        <table class="table table-bordered">

            <tr>
              <td><strong>Username:</strong></td>
              <td><%= @user_activity.username %></td>
            </tr>

            <tr>
              <td><strong>Controller:</strong></td>
              <td><%= @user_activity.controller %></td>
            </tr>

            <tr>
              <td><strong>Action:</strong></td>
              <td><%= @user_activity.action %></td>
            </tr>

            <tr>
              <td><strong>Activity:</strong></td>
              <td><%= @user_activity.activity %></td>
            </tr>

            <tr>
              <td><strong>Time:</strong></td>
              <td><%= @user_activity.time %></td>
            </tr>

        </table>
      </div>
    </div>
  </div>
</div>

<%= link_to user_activities_path, class: 'btn btn-danger' do %>
    Back
  <% end %>