<%= form_for(@disposition_detail, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @disposition_detail.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@disposition_detail.errors.count, "error") %> prohibited this disposition_detail from being saved:</h4>

      <ul>
      <% @disposition_detail.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    
      <%= f.label :nomor, class: "col-sm-2 control-label" %>
      <div class="col-sm-6">
        <%= f.text_field :nomor, class: "form-control" %>
      </div>
    
  </div>

  <div class="form-group">
    
      <%= f.label :penerima, class: "col-sm-2 control-label" %>
      <div class="col-sm-6">
        <%= f.text_field :penerima, class: "form-control" %>
      </div>
    
  </div>

  <div class="form-group">
    
      <%= f.label :status, class: "col-sm-2 control-label" %>
      <div class="col-sm-6">
        <%= f.text_field :status, class: "form-control" %>
      </div>
    
  </div>

  <div class="form-group">
    
      <%= f.label :laporan, class: "col-sm-2 control-label" %>
      <div class="col-sm-6">
        <%= f.text_field :laporan, class: "form-control" %>
      </div>
    
  </div>

  <div class="form-group">
    
      <%= f.label :tgl_laporan, class: "col-sm-2 control-label" %>
      <div class="col-sm-6">
        <%= f.date_select :tgl_laporan, class: "form-control" %>
      </div>
    
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
