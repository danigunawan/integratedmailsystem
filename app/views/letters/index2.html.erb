<% concat ("<div class='alert alert-success alert-dismissable' id='notice'>" + notice + "</div>").html_safe if !notice.nil? %>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Daftar Surat</h2>
        <ol class="breadcrumb">
            <li>
                <%= link_to 'Home', root_path %>
            </li>
            <li>
                <strong>letters</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="ibox float-e-margins">

            <!-- <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
            <a class="dropdown-toggle" data-toggle="dropdown" href="table_basic.html#">
                <i class="fa fa-wrench"></i>
            </a> -->
            <!-- <ul class="dropdown-menu dropdown-user">
                <li><a href="table_basic.html#">Config option 1</a>
                </li>
                <li><a href="table_basic.html#">Config option 2</a>
                </li>
            </ul> -->

            <!--
            <a class="close-link">
                <i class="fa fa-times"></i>
            </a> -->


        <div class="ibox-content" style="display: block;">

            <div class="panel blank-panel">

                <div class="panel-options">

                  <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#tab-masuk">Surat Masuk</a></li>
                    <li class=""><a data-toggle="tab" href="#tab-keluar">Surat Keluar</a></li>
                  </ul>
                </div>
              </div>

              <div class="panel-body">

                <div class="tab-content">
<!-- TAB 1                 -->
                  <div id="tab-masuk" class="tab-pane active">
                    <%= link_to new_letter_masuk_url do %>
                      <span class="fa fa-plus"></span>
                      Tambah Surat Masuk
                    <% end %>
                    <div class="table-responsive">
                      <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>

                          <th>No surat</th>
                          <th>Sifat</th>
                          <th>Pengirim</th>
                          <th>Perihal</th>
                          <th>Tgl surat</th>
                          <th>Dispo</th>
                          <th>Status</th>

                          <th></th>
                          <th></th>
                          <th></th>
                        </tr>
                        </thead>

                        <tbody>
                        <%= content_tag_for(:tr, @letters_masuk) do |letter| %>

                          <td><%= letter.no_surat %></td>
                          <td><%= letter.sifat %></td>
                          <td><%= letter.pengirim %></td>
                          <td><%= letter.perihal %></td>
                          <td><%= letter.tgl_surat %></td>

                          <% if letter.status=="NotRead" %>
                            <td><%= link_to '<i class="fa fa-inbox"></i>'.html_safe, new_disposition_path%></td>
                          <% else %>
                            <td><i class="fa fa-inbox" type="hidden"></i></td>
                          <% end %>

                          <td><%= letter.status %></td>

                          <td><%= link_to '<i class="fa fa-eye"></i>'.html_safe, letter %></td>
                          <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_letter_path(letter) %></td>
                          <td><%= link_to '<i class="fa fa-trash"></i>'.html_safe, letter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        <% end %>
                        </tbody>
                      </table>
                    </div>
                  </div>
<!--TAB 2-->
                  <div id="tab-keluar" class="tab-pane">
                    <%= link_to new_letter_keluar_url do %>
                      <span class="fa fa-plus"></span>
                      Tambah Surat Keluar
                    <% end %>

                    <div class="table-responsive">
                      <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>

                          <th>No surat</th>
                          <th>Sifat</th>
                          <th>Dikirim kepada</th>
                          <th>Perihal</th>
                          <th>Tgl surat</th>
                          <th>Status</th>

                          <th></th>
                          <th></th>
                          <th></th>
                        </tr>
                        </thead>

                        <tbody>
                        <%= content_tag_for(:tr, @letters_keluar) do |letter| %>

                          <td><%= letter.no_surat %></td>
                          <td><%= letter.sifat %></td>
                          <td><%= letter.penerima %></td>
                          <td><%= letter.perihal %></td>
                          <td><%= letter.tgl_surat %></td>
                          <td><%= letter.status %></td>

                          <td><%= link_to '<i class="fa fa-eye"></i>'.html_safe, letter %></td>
                          <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_letter_path(letter) %></td>
                          <td><%= link_to '<i class="fa fa-trash"></i>'.html_safe, letter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        <% end %>
                        </tbody>
                      </table>

                  </div>

              </div>
           </div>

        </div>
      </div>

    </div>
</div>

<br>
