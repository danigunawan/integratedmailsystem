<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>User baru</h2>
        <ol class="breadcrumb">
            <li>
                <%= link_to 'Home', root_path %>
            </li>
            <li>
                <%= link_to 'users', '/users' %>
            </li>
            <li>
                <strong>user baru</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
        
    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">

    <div class="col-sm-offset-2  col-sm-6">
    <%= form_for :user ,url: users_path, :html => { :class => "form-horizontal" } do |f| %>
    <div class="form-group">

        <%= f.label :username, :class =>"col-sm-2 control-label" %>
        <div class="col-sm-10">
        <%= f.text_field :username,:class =>"form-control"  %>
        </div>
    </div>
    <div class="form-group">

        <%= f.label :email, :class =>"col-sm-2 control-label" %>
        <div class="col-sm-10">
        <%= f.email_field :email,:class =>"form-control" %>
        </div>
    </div>
    <div class="form-group">

        <%= f.label :password, :class =>"col-sm-2 control-label" %>
        <div class="col-sm-10">
        <%= f.password_field :password,:class =>"form-control" %>
        </div>
    </div>
    <div class="form-group">

        <%= f.label :password_confirmation, "Confirmation",:class =>"col-sm-2 control-label" %>
        <div class="col-sm-10">
        <%= f.password_field :password_confirmation,:class =>"form-control" %>
        </div>
        
    </div>
    <div class="form-group">

        <%= f.label :role, :class =>"col-sm-2 control-label" %>
        <div class="col-sm-10">
        <%= f.select :role, ['umum','vendor','admin'] %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10">
            <%= f.submit "Create my account", class: "btn btn-primary" %>
        </div>
    </div>
    <% end %>

    </div>

    


    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-offset-2  col-sm-6 col-sm-10">

                <%= link_to 'Back', users_path, class: 'btn btn-danger'%>
            </div>
        </div>
    </div>
 </div>
